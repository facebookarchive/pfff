value
caml_txn_commit (val_txn, flags) 
	value val_txn;
	value flags;
{
	int err;
	DB_TXN* txn = (DB_TXN*) Field (val_txn, 0);
	if ((err = txn->commit (txn, 
			optionval_flags_to_int (flags, commit_flags))) != 0) {
#ifdef DEBUG
		fprintf (stderr, db_strerror (err));
#endif
                if (err > 0 ) { 
                  fprintf (stderr, "system error");
                  exit(0);
                }
		raise_error (err);
	}

	return Val_unit;

}

